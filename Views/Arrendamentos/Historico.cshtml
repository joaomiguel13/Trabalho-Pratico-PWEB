@model Trabalho_Pratico.Models.ViewModels.PesquisaHistoricoArrendamentosViewModel

@{
    ViewData["Title"] = "Histórico de arrendamentos";
}
<div class="pricing-header p-3 pb-md-4 mx-auto text-center">
    <h1 class="display-4 fw-normal">@ViewData["Title"]</h1>
</div>
<hr />
<form method="post">
    <input type="hidden" asp-for="@Model.CategoriaId" />
    <label asp-for="TextoAPesquisar" class="control-label"></label>
    <input asp-for="TextoAPesquisar" />
    <button id="botaoPesquisa" type="submit" class="btn btn-default">
        <svg bootstrap-icon="Search" class="text-warning" width="24" height="24" aria-label="Search"></svg>
    </button>
    <label asp-for="DataEntrada" class="control-label"></label>
    <input asp-for="DataEntrada" onchange="this.form.submit()" />
    <label asp-for="DataSaida" class="control-label"></label>
    <input asp-for="DataSaida" onchange="this.form.submit()" />

    <label for="ordem">Ordenação:</label>
    <select name="Ordem" asp-for="Ordem" onchange="this.form.submit()">
        <option value="desc">Descendente</option>
        <option value="asc">Ascendente</option>
    </select>

</form>
@if (@ViewBag.error != null)
{
    <p class="text-danger">@ViewBag.error</p>
}
<p></p>
<div class="row">
    <div class="col-md-2">
        <h5>Categoria:</h5>
        <form method="post">
            <input type="hidden" asp-for="@Model.TextoAPesquisar" />
            <input type="hidden" asp-for="@Model.DataEntrada" />
            <input type="hidden" asp-for="@Model.DataSaida" />
            <input type="hidden" asp-for="@Model.Ordem" />
            <input type="radio" id="Categoria0" name="Categoria" value="0" onchange="this.form.submit()"
            @(Model.CategoriaId == 0 ? "checked" : "") />
            <label for="Categoria0">Todas</label> <br>
            @foreach (CategoriaHabitacao categoria in ViewBag.CategoriaId)
            {
                <input type="radio" id="Categoria@(categoria.Id)" name="Categoria" value="@categoria.Id" onchange="this.form.submit()"
                @(Model.CategoriaId == categoria.Id ? "checked" : "") />
                <label for="Categoria@(categoria.Id)">@categoria.Nome</label> <br>
            }
        </form>
    </div>
    <div class="col-md-10">
        <table class="table table-bordered table-striped table-hover text-center table-responsive-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaDeArrendamentos.FirstOrDefault().Habitacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaDeArrendamentos.FirstOrDefault().Habitacao.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaDeArrendamentos.FirstOrDefault().DataEntrada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ListaDeArrendamentos.FirstOrDefault().DataSaida)
                    </th>
                    <th>Estado</th>
                    <th>Operações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaDeArrendamentos)
                {
                    <tr>
                        <td>
                            @if (string.IsNullOrWhiteSpace(Model.TextoAPesquisar))
                            {
                                @Html.DisplayFor(modelItem => item.Habitacao.Tipo)
                                <span> </span>
                                @Html.DisplayFor(modelItem => item.Habitacao.Descricao)
                                <span>(@Html.DisplayFor(modelItem => item.Habitacao.Morada))</span>
                            }
                            else
                            {
                                @Html.Raw(item.Habitacao.Tipo.ToString().ToLower().Replace(Model.TextoAPesquisar.ToLower(),
                        "<span class=\"bg-warning\">"+Model.TextoAPesquisar+"</span>"))
                                <span> </span>
                                @Html.Raw(item.Habitacao.Descricao.ToString().ToLower().Replace(Model.TextoAPesquisar.ToLower(),
                        "<span class=\"bg-warning\">"+Model.TextoAPesquisar+"</span>"))
                                <span>
                                    (@Html.Raw(item.Habitacao.Morada.ToString().ToLower().Replace(Model.TextoAPesquisar.ToLower(),
                            "<span class=\"bg-warning\">"+Model.TextoAPesquisar+"</span>")))
                                </span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Habitacao.Categoria.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataEntrada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataSaida)
                        </td>
                        @if (!item.Confirmado)
                        {
                            <td>
                                <span class="text-danger">Não Confirmada</span>
                            </td>
                        }
                        else
                        {
                            if (item.ArrendamentoEstadoHabitacaoEntrada == null)
                            {
                                <td>
                                    <span class="text-info">Por Entrar</span>
                                </td>
                            }
                            else if (item.ArrendamentoEstadoHabitacaoSaida == null)
                            {
                                <td>
                                    <span class="text-warning">Por Sair</span>
                                </td>
                            }
                            else
                            {
                                @if (@item.Habitacao.Locador.Avaliacao.Where(c => c.ArrendamentoId == item.Id).FirstOrDefault() != null)
                                {
                                    <td>
                                        <span class="text-success">Concluido</span>
                                        <span>@item.Habitacao.Locador.Avaliacao.Where(c => c.ArrendamentoId == item.Id).FirstOrDefault().ClassificacaoReserva/10</span>
                                        <svg bootstrap-icon="Star" class="text-warning align-bottom" width="24" height="24" aria-label="Classificação"></svg>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a asp-controller="Avaliacoes" asp-action="Create" asp-route-idArrendamento="@item.Id" class="btn btn-warning">Dar classificação</a>
                                    </td>
                                }
                            }
                        }
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
